<Window x:Class="WPFLocalization.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFLocalization"
        xmlns:rs ="clr-namespace:WPFLocalization.Properties"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    
    <Grid VerticalAlignment="Center" HorizontalAlignment="Center">
        <StackPanel>
            <TextBlock Text="{x:Static rs:Resources.Name_Label}"></TextBlock>
            <TextBox Width="200"></TextBox>
            <Button Content="{x:Static rs:Resources.Submit_btn}"></Button>
        </StackPanel>
    </Grid>
</Window>
